<Window x:Class="Avocado.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Avocado"
        mc:Ignorable="d"
        Title="Home Page" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBlock Text="ESoft IT" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <Button Height="40" Width="100" HorizontalAlignment="Right" Margin="0,0,20,0" Name="btnBack" Click="btnBack_Click">Назад</Button>
        <Grid Background="#FF78D3FF" Panel.ZIndex="-2"></Grid>
        <Grid Background="#FF2C2C2C" Grid.Row="2"></Grid>
        <Frame NavigationUIVisibility="Hidden" ContentRendered="MainFrame_ContentRendered" Name="MainFrame" Grid.Row="1"/>

    </Grid>
</Window>
